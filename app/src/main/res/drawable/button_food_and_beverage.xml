<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/blueprimarycolor" /> <!-- Pressed color (blue) -->
                    <corners android:radius="6dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/main_group" /> <!-- Pressed state image -->
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/grayprimarycolor" /> <!-- Default color (gray) -->
                    <corners android:radius="6dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/burger_float" /> <!-- Default state image -->
        </layer-list>
    </item>
</selector>
