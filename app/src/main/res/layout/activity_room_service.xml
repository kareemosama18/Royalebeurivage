<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomService"
    android:background="@color/mainwhitecolor"
    >


    <TextView
        android:id="@+id/CheeringtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Hello"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NameTitletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="Kareem Osama"
        android:textAllCaps="true"
        android:textColor="@color/purpleprimarycolor"
        android:textSize="35dp"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheeringtextView" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="700dp"

        android:background="@drawable/rounded_purple_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/bottom_nav_menu" />


    <ImageView
        android:id="@+id/Furniturebtnimage"
        android:layout_width="120dp"
        android:layout_height="120dp"


        android:clickable="true"
        android:onClick="onImageClick"

        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/furniture_group_blue" />


    <ImageView
        android:id="@+id/Electroincsbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"


        android:clickable="true"
        android:onClick="onImageClick2"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toEndOf="@+id/Furniturebtnimage"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/electronics_group_blue" />

    <HorizontalScrollView
        android:id="@+id/ServiceHorizontalview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Serviceimage1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="10sp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageView
                android:id="@+id/Serviceimage2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="10sp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Serviceimage3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="10sp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Serviceimage4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="10sp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Add more ImageView elements for additional photos -->

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/ServiceHorizontalview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Service2image1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="10sp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"

                />



            <!-- Add more ImageView elements for additional photos -->

        </LinearLayout>
    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>