<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food"
    android:background="@color/mainwhitecolor"
    >

    <TextView
        android:id="@+id/CheeringtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Hello"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NameTitletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="Kareem Osama"
        android:textAllCaps="true"
        android:textColor="@color/purpleprimarycolor"
        android:textSize="35dp"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheeringtextView" />





    <ImageView
        android:id="@+id/imageviewMaingray"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/main_group_gray" />
    <ImageView
        android:id="@+id/imageviewMain"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/main_group" />





    <ImageView
        android:id="@+id/imageviewpizza"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/pizza_group_blue" />

    <ImageView
        android:id="@+id/imageviewpizzagray"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/pizza_group_grey" />









    <ImageView
        android:id="@+id/imageviewsandwich"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/sandwiches_group_blue" />
    <ImageView
        android:id="@+id/imageviewsandwichgray"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/sandwiches_group_gray" />







    <ImageView
        android:id="@+id/imageviewDessert"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/desserts_group_blue" />
    <ImageView
        android:id="@+id/imageviewDessertgray"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameTitletextView"
        app:srcCompat="@drawable/dessert_group_gray" />


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:contentDescription="main food 2 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.831"
                app:layout_constraintStart_toEndOf="@+id/image1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="72dp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"

                android:src="@drawable/ship_homepage_bg_pic_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image1" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="72dp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"
                android:scaleType="fitXY"

                android:src="@drawable/ship_homepage_bg_pic_1"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.831"
                app:layout_constraintStart_toEndOf="@+id/image3"
                app:layout_constraintTop_toBottomOf="@+id/image2" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="72dp"
                android:clickable="true"
                android:contentDescription="main food 1 content"
                android:onClick="imageClicked"

                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image3" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="72dp"
                android:clickable="true"
                android:contentDescription="main food 1 content"

                android:onClick="imageClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ship_homepage_bg_pic_1"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.926"
                app:layout_constraintStart_toEndOf="@+id/image5"
                app:layout_constraintTop_toBottomOf="@+id/image4" />


            <!-- Add more ImageViews as needed -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="700dp"

        android:background="@drawable/rounded_purple_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/bottom_nav_menu"
        />






</androidx.constraintlayout.widget.ConstraintLayout>